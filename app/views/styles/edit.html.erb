<% if @style.new_record?
	#this doesn't work on the new host...
	#form_url = styles_path()
	#form_url = url_for(:action => "create")
	form_url = "/styles/create"
	form_method = :post
else
	#form_url = style_path(@style)
	form_url = "/styles/update"
	form_method = :put
end %>
<%=form_for(:style, :url => form_url, :html => { :method => form_method, :multipart => true}) do |s| %>

	<%= s.error_messages %>

	<div class="form-controls">
		<label for="short-description">Name</label><br>
		<%=s.text_field(:short_description, :maxlength => 50, :required => true)%>
	</div>

	<div class="form-controls">
		<label for="long-description">Description</label> - <span class="linking-note">A brief (3-4 sentences) description of the style. <a href="/help/coding#format" tabindex="-1">Some HTML allowed.</a></span>
		<%=s.text_area(:long_description, :rows => 4, :required => true)%>
	</div>


	<div class="form-controls">
		<label for="additional-info">Additional Info (Optional)</label> - <span class="linking-note">Release notes, versioning info, change log, instructions, credits, etc. <a href="/help/coding#format" tabindex="-1">Some HTML allowed.</a></span>
		<%=s.text_area(:additional_info, :rows => 8)%>
	</div>

	<div class="form-controls">
		<label for="css">CSS</label>
			<textarea id="css" name="style[css]" required><%=@style.style_code == nil ? "" : @style.style_code.code%></textarea>
	</div>

	<div class="form-controls">
		<label for="example-url">Example URL (Optional)</label> <span class="linking-note">Provide a URL that is affected by this style</span><br>
		<input id="example-url" type="url" maxlength="500" size="50" name="style[screenshot_url_override]" value="<%=!params['style'].nil? && !params['style']['screenshot_url_override'].nil? ? h(params['style']['screenshot_url_override']) : h(@style.screenshot_url_override)%>">
	</div>

	<div class="form-controls">
		<label>Style Settings (Optional)</label> <span class="linking-note"><a href="/help/coding#help-style-settings">Need help with style settings?</a></span>
		<ul id="edit-style-settings">
			<li id="new-setting"><input type="button" onclick="addTextSetting('text', false, '', '');return false" value="New Text Setting"> <input type="button" onclick="addTextSetting('image', false, '', '');return false" value="New Image Setting"> <input type="button" onclick="return addColorSetting('', '', null);" value="New Color Setting"></li>
		</ul>
		<script>
			var settings = document.getElementById("edit-style-settings")
			var newSetting = document.getElementById("new-setting");

			function html(h) {
				var d = document.createElement("div");
				d.innerHTML = h;
				var f = document.createDocumentFragment();
				Array.prototype.forEach.call(d.childNodes, function(c) { f.appendChild(c); });
				return f;
			}

			function addTextSetting(type, fromServer, name, placeholder) {
				var code = '<li class="edit-settingType-setting"><input name="setting-display-name-fakeId" placeholder="Label" required value="passedName"> <input name="setting-name-fakeId" placeholder="Placeholder" required value="passedPlaceholder"><input type="hidden" name="style_options_ids[]" value="fakeId"><input type="hidden" name="setting-type-fakeId" value="serverSettingType"><input class="move-setting-up" type="button" onclick="moveSetting(event, true);return false;" value="↑"> <input class="move-setting-down" type="button" onclick="moveSetting(event, false);return false;" value="↓"> <input type="button" onclick="return removeSetting(this.parentNode);" value="✖"><ul id="edit-style-options-fakeId" class="edit-style-options"><li class="new-option"><input type="button" onclick="return addTextOptionEvent(event, \'settingType\', fakeId, \'\', \'\', false)" value="Add Option"></li></ul></li>'
				var id = getFakeId();
				var serverSettingType = type == 'text' ? 'dropdown' : type;
				code = code.replace(/fakeId/g, id).replace(/settingType/g, type).replace(/serverSettingType/g, serverSettingType).replace(/passedName/g, name).replace(/passedPlaceholder/g, placeholder);
				settings.insertBefore(html(code), newSetting);
				if (!fromServer && type == 'text') {
					var optionsContainer = newSetting.previousSibling.querySelector("ul");
					addTextOption(optionsContainer, type, id, '', '', false);
					addTextOption(optionsContainer, type, id, '', '', false);
				}
				updateSettingButtons();
				return id;
			}

			function addColorSetting(name, placeholder, defaultValue) {
				var code = '<li class="edit-color-setting"><input name="setting-display-name-fakeId" placeholder="Label" required value="passedName"> <input name="setting-name-fakeId" placeholder="Placeholder" required value="passedPlaceholder"><input type="hidden" name="style_options_ids[]" value="fakeId"><input type="hidden" name="setting-type-fakeId" value="color"> <label for="option-default-fakeId">Default</label> <input type="text" class="color {hash:true,required:false}" id="option-default-fakeId" name="option-default-fakeId" value="" size="7" maxlength="7"><input class="move-setting-up" type="button" onclick="moveSetting(event, true);return false;" value="↑"> <input class="move-setting-down" type="button" onclick="moveSetting(event, false);return false;" value="↓"> <input type="button" onclick="return removeSetting(this.parentNode);" value="✖"></li>';
				var fakeId = getFakeId();
				code = code.replace(/fakeId/g, fakeId).replace(/passedName/g, name).replace(/passedPlaceholder/g, placeholder);
				settings.insertBefore(html(code), newSetting);
				var defaultField = document.getElementById("option-default-" + fakeId);
				new jscolor.color(defaultField, {hash:true,required:true});
				if (defaultValue) {
					defaultField.value = defaultValue;
				}
				updateSettingButtons();
			}

			function addTextOptionEvent(e, type, fakeId, label, value, isDefault) {
				addTextOption(getParent(e.target, "ul"), type, fakeId, label, value, isDefault);
			}

			function addTextOption(ul, type, fakeId, label, value, isDefault) {
				var code = '<li><div style="display: inline-block; vertical-align: top"><input name="option-display-name-fakeId[]" required onchange="modifyValueName(event)" placeholder="Label" value="passedLabel"><br><input type="radio" name="option-default-fakeId" value="passedLabel"' + (isDefault ? 'checked' : '') + '> Default</div>';
				if (type == 'text') {
					code += '<textarea name="option-value-fakeId[]" rows="5" placeholder="Code">passedValue</textarea>';
				} else {
					code += '<input name="option-value-fakeId[]" type="url" placeholder="URL" value="passedValue">';
				}
				code += '<div style="display: inline-block; vertical-align: top"><input class="move-option-up" type="button" onclick="moveOption(event, true);return false;" value="↑"> <input class="move-option-down" type="button" onclick="moveOption(event, false);return false;" value="↓"> <input class="remove-option" type="button" onclick="removeTextOption(this.parentNode.parentNode);return false;" value="✖"></div></li>'
				code = code.replace(/fakeId/g, fakeId).replace(/passedLabel/g, label).replace(/passedValue/g, value);
				ul.insertBefore(html(code), ul.lastChild);
				ensureDefault(ul);
				updateOptionButtons(ul);
			}

			function removeSetting(li) {
				removeEntry(li);
				updateSettingButtons();
			}

			function removeTextOption(li) {
				var p = li.parentNode;
				removeEntry(li);
				ensureDefault(p);
				updateOptionButtons(p);
			}

			function ensureDefault(li) {
				var currentDefault = li.querySelector("input[type='radio']:checked");
				if (currentDefault != null) {
					return;
				}
				var firstOption = li.querySelector("input[type='radio']");
				if (firstOption == null) {
					return;
				}
				firstOption.checked = true;
			}

			function removeEntry(li) {
				li.parentNode.removeChild(li);
				return false;
			}

			function updateSettingButtons() {
				var downs = settings.querySelectorAll(".move-setting-down");
				if (downs.length == 1) {
					downs[0].style.visibility = "hidden";
				} else if (downs.length > 1) {
					for (var i = 0; i < downs.length - 1; i++) {
						downs[i].style.visibility = "";
					}
					downs[downs.length - 1].style.visibility = "hidden";
				}
				var ups = settings.querySelectorAll(".move-setting-up");
				if (ups.length == 1) {
					ups[0].style.visibility = "hidden";
				} else if (ups.length > 1) {
					ups[0].style.visibility = "hidden";
					for (var i = 1; i < ups.length; i++) {
						ups[i].style.visibility = "";
					}
				}
			}

			function updateOptionButtons(e) {
				var allowLessThanTwoSettings = e.parentNode.className == "edit-image-setting";
				var downs = e.querySelectorAll(".move-option-down");
				if (downs.length == 1) {
					downs[0].style.visibility = "hidden";
				} else if (downs.length > 1) {
					for (var i = 0; i < downs.length - 1; i++) {
						downs[i].style.visibility = "";
					}
					downs[downs.length - 1].style.visibility = "hidden";
				}
				var ups = e.querySelectorAll(".move-option-up");
				if (ups.length == 1) {
					ups[0].style.visibility = "hidden";
				} else if (ups.length > 1) {
					ups[0].style.visibility = "hidden";
					for (var i = 1; i < ups.length; i++) {
						ups[i].style.visibility = "";
					}
				}
				var removes = e.querySelectorAll(".remove-option");
				for (var i = 0; i < removes.length; i++) {
					removes[i].style.visibility = (removes.length > 2 || allowLessThanTwoSettings) ? "" : "hidden";
				}
			}

			function getFakeId() {
				var fakeIdElements = document.querySelectorAll("input[name='style_options_ids[]']");
				var fakeId;
				if (fakeIdElements.length == 0) {
					return 100;
				}
				return new Number(fakeIdElements[fakeIdElements.length - 1].value) + 1;
			}

			function getParent(element, nodeName) {
				element = element.parentNode;
				while (element != null) {
					if (element.nodeName.toLowerCase() == nodeName) {
						return element;
					}
					element = element.parentNode;
				}
				return null;
			}

			function getSibling(element, nodeName, previous) {
				if (previous) {
					element = element.previousSibling;
				} else {
					element = element.nextSibling;
				}
				while (element != null) {
					if (element.nodeName.toLowerCase() == nodeName) {
						return element;
					}
					if (previous) {
						element = element.previousSibling;
					} else {
						element = element.nextSibling;
					}
				}
				return null;
			}

			function moveSetting(e, up) {
				var row = getParent(e.target, "li");
				var switchRow = getSibling(row, "li", up);
				if (switchRow == null) {
					return false;
				}
				// remember the default selections. changing the names will change them
				var default1 = row.querySelector("input:checked");
				var default2 = switchRow.querySelector("input:checked");
				var identifierInput = row.querySelector("input[name='style_options_ids[]']");
				var switchIdentifierInput = switchRow.querySelector("input[name='style_options_ids[]']");
				var from = identifierInput.value;
				var to = switchIdentifierInput.value;
				switchIdentifiers(row, from, to);
				switchIdentifiers(switchRow, to, from);
				identifierInput.value = to;
				switchIdentifierInput.value = from;
				if (up) {
					row.parentNode.insertBefore(row, switchRow);
				} else {
					row.parentNode.insertBefore(switchRow, row);
				}
				if (default1) {
					default1.checked = true;
				}
				if (default2) {
					default2.checked = true;
				}
				updateSettingButtons();
				return false;
			}

			function moveOption(e, up) {
				var row = getParent(e.target, "li");
				var switchRow = getSibling(row, "li", up);
				if (up) {
					row.parentNode.insertBefore(row, switchRow);
				} else {
					row.parentNode.insertBefore(switchRow, row);
				}				
				updateOptionButtons(row.parentNode);
			}

			function switchIdentifiers(row, from, to) {
				var inputs = row.getElementsByTagName("input");
				for (var i = 0; i < inputs.length; i++) {
					inputs[i].name = inputs[i].name.replace(from, to);
				}
				var textareas = row.getElementsByTagName("textarea");
				for (var i = 0; i < textareas.length; i++) {
					textareas[i].name = textareas[i].name.replace(from, to);
				}
			}

			function modifyValueName(e) {
				// update the default radio button's value
				var input = e.target.parentNode.parentNode.querySelector("input[type='radio']");
				input.value = e.target.value;
			}

			var lastId = null;
			<%
			@new_style_options = @style.style_options if @new_style_options.nil? and !@style.nil? 
			if @new_style_options
				@new_style_options.each do |option|
					if option.option_type == 'dropdown' or option.option_type == 'image'
						js_type = option.option_type == 'dropdown' ? 'text' : 'image' %>
						lastId = addTextSetting('<%=js_type%>', true, '<%=escape_javascript(h(option.display_name))%>', '<%=escape_javascript(h(option.name))%>');
						<% option.style_option_values.each do |sov| %>
							addTextOption(document.getElementById('edit-style-options-' + lastId), '<%=js_type%>', lastId, '<%=escape_javascript(h(sov.display_name))%>', '<%=escape_javascript(h(sov.value))%>', <%=sov.default%>);
						<% end
					else
						defaultValue = option.style_option_values.first.value unless option.style_option_values.empty? %>
						lastId = addColorSetting('<%=escape_javascript(h(option.display_name))%>', '<%=escape_javascript(h(option.name))%>', '<%=escape_javascript(h(defaultValue))%>');
					<% end
				end	
			end %>
		</script>
	</div>

